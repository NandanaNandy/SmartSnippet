{
  "manifest_version": 3,
  "name": "Real Time Code Explainer",
  "version": "1.0",
  "description": "Explain code in simple English, highlight key points, and more.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://api.github.com/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png"
    }
  },
  "content_scripts": [
    {
    "matches": ["https://github.com/*"],
    "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png"
  },
  "web_accessible_resources": [
    {
    "resources": ["icons/icon2.png"],
    "matches": ["<all_urls>"]
    }
  ]
}