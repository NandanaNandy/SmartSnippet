{
    "manifest_version": 3,
    "name": "GitHub Llama Connector",
    "version": "1.0",
    "description": "Fetches code from GitHub and processes it with a local Llama model.",
    "permissions": ["storage", "activeTab", "scripting"],
    "host_permissions": ["https://api.github.com/*"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    }
  }
  